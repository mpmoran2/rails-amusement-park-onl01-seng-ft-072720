<h1>Sign In</h1>
<%= form_with(url: sessions_path, method: :post) do %>
    <div class="field">
        <label for="name">Name</label><br>
        <%= text_field_tag :name %>
    </div>

    <div class="field">
        <label for="password">Password</label><br>
        <%= password_field_tag :password %>
    </div>

    <%= submit_tag "Sign In" %>
<% end %>