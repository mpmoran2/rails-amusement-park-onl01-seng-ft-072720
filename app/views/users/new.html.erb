<h1>Sign Up</h1>
<p>You need an account to buy tickets and ride!</p>

<%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :password %>
    <%= f.password_field :password %><br>
    <%= f.label :height, "Height (in inches)" %>
    <%= f.number_field :height %><br>
    <%= f.label :nausea, "How nauseous are you?" %>
    <%= f.number_field :nausea %><br>
    <%= f.label :happiness, "How happy are you?" %>
    <%= f.number_field :happiness %><br>
    <%= f.label :tickets, "How many dollars are in your pocket?" %>
    <%= f.number_field :tickets %><br>
    <%= f.label :admin, "Check box if you are a theme park owner" %>
    <%= f.check_box :admin %><br>
    <br>
    <%= f.submit %>
<% end %>